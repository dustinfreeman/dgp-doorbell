<UserControl x:Class="DGPDoorbell.UserFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dgp="clr-namespace:DGPDoorbell"
             mc:Ignorable="d" Width="800" >
    <StackPanel>
        <Canvas Name="userCanvas" Width="800" Height="600">

            <Image  Name="userImage" Width="800" Height="600" />
            <dgp:GUI x:Name="gui"/>
            
            <Ellipse Name="HandEllipse" Width="40" Height="40" Fill="GreenYellow" Opacity="0.7" Visibility="Hidden"/>
            
        </Canvas>
        <Canvas >
            <StackPanel Name="emailListStackPanel" Orientation="Horizontal" Canvas.Top="0" Canvas.Left="0">

            </StackPanel>
            
        </Canvas>
    </StackPanel>
</UserControl>
